.input
  position relative
  font-size 0
  font-style normal
  input[type="text"], input[type="number"], textarea
    font-family font-family-standard
    font-size font-size-standard
    color text-default
    margin 0
    font-size font-size-standard
    max-width 100%
    line-height 1.125
    padding 0.75rem 1rem
    outline 0
    border-radius border-radius-normal
    text-align left
    border 0
    border 1px solid background-light-grey
    transition border-color 0.14s ease
    min-width 220px
    background-color #fff
    height 2.625em
    +placeholder()
      color text-disabled
    &:focus
      border-color color-primary
  textarea
    &:not([rows])
      min-height 8rem
      max-height 22rem
    line-height 1.2rem
    min-height 3rem
    min-width 23rem
    width 100%
    resize vertical
    max-width 20rem
  .checkbox, .radio
    font-size font-size-standard
    label
      display inline-block
      vertical-align middle
      margin-left .8rem
      color link-light
      cursor pointer
    .toggle
      width 1.4rem
      height 1.4rem
      content ' '
      display inline-block
      vertical-align top
      box-shadow inset 0 0 0 2px border-grey
      cursor pointer
    &:hover
      label
        color link-light-hover
      .toggle
        background-color background-lightest-grey
    &.selected
      label
        color text-default
  .checkbox
    .toggle
      border-radius border-radius-normal
      transition all cubic-bezier(0.02, 0.49, 0.01, 0.97) .14s
      &:after
        background-size 100%
        content ''
        transform scale(0)
        height 1.4rem
        width 1.4rem
        display block
        transition all cubic-bezier(0.02, 0.49, 0.01, 0.97) .14s .1s
        background-image: url("data:image/png;base64,")
    &.selected
      .toggle
        box-shadow inset 0 0 0 1rem color-green
        &:after
          transform scale(1)
  .radio
    .toggle
      border 2px solid border-grey
      box-shadow inset 0 0 0 2px #fff
      border-radius 50%
    &.selected
      .toggle
        background-color color-primary
        border-color color-primary
  &.range
    input[type=range]
      -webkit-appearance none
      width 100%
      padding 5px 0
      font-size 16px
      &:focus
        outline 0
      &::-webkit-slider-runnable-track
        width 100%
        height 3px
        background background-light-grey
        border none
        border-radius border-radius-normal
      &::-webkit-slider-thumb
        -webkit-appearance none
        height .8rem
        width .8rem
        background-color text-default
        border-radius 50px
        cursor pointer
        margin-top -.3rem
        transition all .14s ease
      &:hover
        &::-webkit-slider-thumb
          height 1.1rem
          width 1.1rem
          margin-top -.4rem
  &.transparent
    input, textarea
      padding 0
      background-color transparent
      border 0
  &[disabled], &.disabled
    input[type="text"], input[type="number"], textarea
      @extends .disabled
      background-color background-lightest-grey
    .radio, .checkbox
      @extends .disabled
      .toggle
        opacity .6
    &.range
      @extends .disabled
      input[type=range]
        &::-webkit-slider-thumb
          border 3px solid background-light-grey
          background-color #fff
  &.block
    textarea, input
      max-width none
      width 100%

.action
  input
    border-radius border-radius-normal 0 0 border-radius-normal
    display inline-block
    vertical-align top
    & + .button
      border-radius 0 border-radius-normal border-radius-normal 0
      display inline-block
      vertical-align top
      font-size font-size-standard
      margin-left -1px
  .button
    border-radius border-radius-normal 0 0 border-radius-normal
    display inline-block
    vertical-align top
    font-size font-size-standard
    & + input
      border-radius 0 border-radius-normal border-radius-normal 0
      display inline-block
      vertical-align top
      margin-left -1px
